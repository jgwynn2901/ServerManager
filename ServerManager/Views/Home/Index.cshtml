@{
    ViewBag.Title = "Home";
}
<div class="container">
  <div class="searchBar">

    <form class="form-inline" role="form">
      <div class="form-group">
        <label class="sr-only" for="instance">Instance</label>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-database"></i></span>
          <input type="text" id="instance" placeholder="Instance" class="form-control"
                 typeahead="instance for instance in getInstances($viewValue)"
                 title="May I have the database instance?" autocomplete="off"
                 ng-model="instance" typeahead-loading="loadingMakes"
                 ng-blur="onInstanceChange()" />
          <i ng-show="loadingInstances" class="glyphicon glyphicon-refresh"> loading</i>
          
        </div>
        </div>
      <div class="form-group">
        <label class="sr-only" for="server_name">Server Name</label>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-laptop"></i></span>
          <input type="text" id="server_name" placeholder="Server" class="form-control"/>
        </div>
      </div>
      <div class="row">
        
        <table st-table="rowCollection" class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>IpAddress</th>
              <th>Uri</th>
              <th>Role</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="row in servers">
              <td>{{row.Name}}</td>
              <td>{{row.IpAddress}}</td>
              <td><a href="{{row.Uri}}">{{row.Uri}}</a></td>
              <td>{{row.Role}}</td>
              <td>{{row.Description}}</td>
              <td>
                <button type="button" ng-click="addAlert('You will need permission from the administrator.')">
                  <i class="fa fa-remove">
                  </i>
                </button>
              </td>
            </tr>
          </tbody>
        </table>
        <button type="button" ng-click="addAlert('This functionality is not quite ready.')" class="btn btn-sm btn-success">
          <i class="glyphicon glyphicon-plus">
          </i>&nbsp;Add Server
        </button>

      </div>
      <div class="row">
        <div class="col-md-12">
          <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)">{{alert.msg}}</alert>
        </div>
      </div>
    </form>
  </div>
</div>
  
