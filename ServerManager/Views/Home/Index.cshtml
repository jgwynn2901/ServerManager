@{
  ViewBag.Title = "Home";
}
<div class="container">
  <div class="searchBar">
    <form class="form-inline" role="form">
      <div class="form-group">
        <label class="sr-only" for="instance">Instance</label>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-database"></i></span>
          <input type="text" id="instance" placeholder="Instance" class="form-control"
                 typeahead="instance for instance in getInstances($viewValue)"
                 title="May I have the database instance?" autocomplete="off"
                 ng-model="instance" typeahead-loading="loadingInstances" />
          <i ng-show="loadingInstances" class="glyphicon glyphicon-refresh"> loading</i>
        </div>
      </div>
      <div class="form-group">
        <label class="sr-only" for="server_name">Server Name</label>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-laptop"></i></span>
          <input type="text" id="server_name" placeholder="Server" class="form-control"
                 typeahead="name for name in getServerNames($viewValue)"
                 ng-model="server" autocomplete="off" typeahead-loading="loadingServers" />
          <i ng-show="loadingServers" class="glyphicon glyphicon-refresh"> loading</i>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <button class="btn btn-success" ng-disabled="server.length == 0" ng-click="addAlert('not ready.')">
            <i class="fa fa-binoculars">
            </i>&nbsp;View
          </button>
        </div>
      </div>
      <div class="row">
        <table st-table="rowCollection" class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>IpAddress</th>
              <th>Uri</th>
              <th>Role</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="row in servers">
              <td>{{row.Name}}</td>
              <td>{{row.IpAddress}}</td>
              <td><a href="{{row.Uri}}">{{row.Uri}}</a></td>
              <td>{{row.Role}}</td>
              <td>{{row.Description}}</td>
              <td>
                <button type="button" class="btn btn-sm btn-success dropdown-toggle" ng-click="addAlert('admin only.')" ng-disabled="admin">
                  <i class="fa fa-caret-down">
                  </i>
                </button>
              </td>
            </tr>
          </tbody>
        </table>
        <button type="button" ng-click="addAlert('not ready.')" class="btn btn-sm btn-success" ng-disabled="admin">
          <i class="fa fa-plus">
          </i>&nbsp;Add
        </button>
      </div>
    </form>
  </div>
</div>

